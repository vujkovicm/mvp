rule make_impPheno:
	input:
		[ "out/imp/" + phe + "/" + phe + "." + pop + ".phe" for phe in config['impPHE'] for pop in config['impPOP'] ]

rule make_impRvtest:
	input:
		[ "out/imp/" + phe + "/" + pop + "/rvtest/chr" + str(chr) + "/" + phe + ".chr" + str(chr) + "." + str(i) + "." + str(j).zfill(2) + ".SingleScore.assoc" for phe in config['impPHE'] for pop in config['impPOP'] for chr in range(1, 3) for i in range(1, 3) for j in range(1, 3) ]

rule make_impRvtestMrg:
	input:
		[ "summary/imp/" + phe + "/" + phe + "." + pop + ".imp.info" + info + ".SingleScore.assoc" for phe in config['impPHE'] for pop in config['impPOP'] for info in config['impINFO']]

rule make_impRvtestMaf:
	input:
		 [ "summary/imp/" + phe + "/" + phe + "." + pop + ".imp.info" + info + ".maf" + maf +".rvtest.assoc" for phe in config['impPHE'] for pop in config['impPOP'] for info in config['impINFO'] for maf in config['impMAF']]

rule make_impManhattan:
	input:
		 [ "summary/imp/" + phe + "/" + phe + "." + pop + ".imp.info" + info + ".maf" + maf +".rvtest.m.png" for phe in config['impPHE'] for pop in config['impPOP'] for info in config['impINFO'] for maf in config['impMAF'] ]

rule make_impMetalScript:
	input:
		 [ "scripts/metal/imp/" + phe + "/" + phe + ".META.imp.info" + info + ".maf" + maf + ".metal" for phe in config['impPHE'] for info in config['impINFO'] for maf in config['impMAF']]

rule make_impMetalRun:
	input:
		 [ "summary/imp/" + phe + "/" + phe + ".META.imp.info" + info + ".maf" + maf +".meta_1.out" for phe in config['impPHE'] for info in config['impINFO'] for maf in config['impMAF'] ]

rule make_impMetalClean:
	input:
		  [ "summary/imp/" + phe + "/" + phe + ".META.imp.info" + info + ".maf" + maf +".metal.out" for phe in config['impPHE'] for info in config['impINFO'] for maf in config['impMAF'] ]

rule make_impLocusPrep:
	input:
		  [ "summary/imp/" + phe + "/" + phe + ".META.imp.info" + info + ".maf" + maf +".locus.ref" for phe in config['impPHE'] for info in config['impINFO'] for maf in config['impMAF'] ]

rule make_impLocusRun:
	input:
		  [ "summary/imp/" + phe + "/locus/" + phe + ".locus.txt" for phe in config['impPHE'] ]
